{
  "Serilog": {
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft": "Warning",
        "System": "Warning"
      }
    },
    "WriteTo": [
      {
        "Name": "MongoDBBson",
        "Args": {
          "databaseUrl": "mongodb://localhost:27017/Serilog_Bakery",
          "collectionName": "logs",
          "cappedMaxSizeMb": "50",
          "cappedMaxDocuments": "1000"
        }
      }
    ]
  },
  
  "ConnectionStrings": {
    "BakeryConnection": "Server=localhost,1433;Database=BakeryDB;User Id=SA;Password=<SQLPass123>;MultipleActiveResultSets=True;TrustServerCertificate=True",
    "MongoDB": "mongoDb://localhost:27017/Serilog_Bakery"
  },
  "UseDeveloperExceptionPage": true
}
